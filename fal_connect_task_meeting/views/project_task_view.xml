<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="task_meeting_view_planned" model="ir.ui.view">
        <field name="name">task.meeting.view.planned</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="industry_fsm.view_task_form2_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_deadline']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//label[@for='planned_date_begin']" position="attributes">
                <attribute name="attrs"></attribute>
            </xpath>
            <xpath expr="//div[hasclass('w-100')]" position="attributes">
                <attribute name="attrs"></attribute>
            </xpath>
            <xpath expr="//button[@name='action_timer_start'][hasclass('btn-primary')]" position='after'>
                <button class="btn-secondary" name="action_create_planning" type="object" string="Create Planning" attrs="{'invisible': ['|', ('planned_date_begin', '=', False), ('user_id', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
