<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Workflow Rules -->

        <record id="documents_purchase_rule" model="documents.workflow.rule">
            <field name="sequence">4</field>
            <field name="name">Create a Purchase Order</field>
            <field name="activity_option">True</field>
            <field name="excluded_tag_ids" eval="[(4, ref('documents.documents_internal_knowledge_sales'))]"/>
            <field name="activity_type_id" ref="documents.mail_documents_activity_data_tv"/>
            <field name="create_model">purchase.order</field>
            <field name="domain_folder_id" ref="documents.documents_internal_folder"/>
        </record>

        <record id="documents_workflow_action_purchase" model="documents.workflow.action">
            <field name="workflow_rule_id" ref="documents_purchase_rule"/>
            <field name="action">replace</field>
            <field name="facet_id" ref="documents.documents_internal_status"/>
            <field name="tag_id" ref="documents.documents_internal_status_tc"/>
        </record>

    </data>
</odoo>
