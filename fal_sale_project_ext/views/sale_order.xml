<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form_inherit_sale_project_ext" model="ir.ui.view">
        <field name="name">sale.order.form.sale.project.ext</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_quotation_send']" position="after">
                <button name="create_project" id="create_project" string="Create Project" class="btn-primary" type="object" attrs="{'invisible': ['|', ('visible_project', '=', False), ('project_id', '!=', False), '|', ('state', 'not in', ['draft'])]}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                <field name="project_template_id" optional="hide" invisible="1"/>
                <field name="project_id" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='analytic_account_id']" position="after">
                <field name="visible_project_template" invisible="1"/>
                <field name="project_template_id" options="{'no_create': True}" attrs="{'invisible': [('visible_project_template', '=', False)]}"/>
            </xpath>
        </field>
    </record>

    <record id="sale_order_template_view_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.template.form</field>
        <field name="model">sale.order.template</field>
        <field name="inherit_id" ref="sale_management.sale_order_template_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='confirmation']" position="after">
                <page string="Other Info" name="other_information">
                    <group>
                        <group>
                            <field name="project_template_id" attrs="{'invisible': [('visible_project', '=', False)]}"/>
                        </group>
                        <group>
                            <field name="visible_project" invisible="1"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
